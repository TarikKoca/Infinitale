###############################################
# Eternalore Staging Environment Example
###############################################

# Django
SECRET_KEY=
DEBUG=False
ALLOWED_HOSTS=staging.eternalore.com
SITE_ID=1
SITE_URL=https://staging.eternalore.com

# Database (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=Eternalore_staging
DB_USER=Eternalore_staging
DB_PASSWORD=
DB_HOST=db-staging
DB_PORT=5432
DB_SSLMODE=prefer

# Redis / Celery
REDIS_URL=redis://redis-staging:6379/2
CELERY_BROKER_URL=redis://redis-staging:6379/0
CELERY_RESULT_BACKEND=redis://redis-staging:6379/1
CELERY_TASK_ALWAYS_EAGER=False

# Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_PROXY_SSL_HEADER=True
X_FRAME_OPTIONS=DENY
CSRF_TRUSTED_ORIGINS=https://staging.eternalore.com

# Email (use sandbox/test SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Eternalore Staging <no-reply@staging.eternalore.com>

# Sentry (optional for staging)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.05

# Media storage (optional S3)
USE_S3_MEDIA=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=
AWS_S3_ENDPOINT_URL=

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
ACCOUNT_EMAIL_VERIFICATION=optional

# Analytics (optional)
GA_MEASUREMENT_ID=

# Billing (sandbox)
PADDLE_ENV=sandbox
PADDLE_API_KEY=
PADDLE_WEBHOOK_SECRET=
PADDLE_PRICE_ID_LITE=
PADDLE_PRICE_ID_PLUS=
PADDLE_PRICE_ID_PRO=
PADDLE_RETURN_URL=https://staging.eternalore.com/pricing/
PADDLE_CANCEL_URL=https://staging.eternalore.com/pricing/